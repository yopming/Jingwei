    header#admin-header
      div.container
        h1 Jingwei Management

    div#admin-body
      div.container

        div.row
          div.col-sm-2.left
            div.btn-group.select.select-block.open
              a(href="/", target="_blank").btn.dropdown-toggle.btn-info.view View
              span.dropdown-arrow.dropdown-arrow-inverse
              ul.dropdown-menu.dropdown-inverse
